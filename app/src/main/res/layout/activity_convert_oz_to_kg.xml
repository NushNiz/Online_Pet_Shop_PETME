<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#ff7f7f"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="oz to kg Converter"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#131E69" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/scale" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="40dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.163"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="94dp"
                android:layout_height="38dp"
                android:text="oz"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="361dp" />

            <TextView
                android:id="@+id/tv_height3"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="(Ounces)"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="399dp" />

            <EditText
                android:id="@+id/et_oz"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:hint="000"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_height2"
                android:layout_width="91dp"
                android:layout_height="38dp"
                android:text="kg"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="479dp" />

            <TextView
                android:id="@+id/tv_height4"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="(Kilograms )"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="517dp" />

            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:hint="000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_convert"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:backgroundTint="#FF7F7F"
                android:text="Convert"
                android:textAllCaps="false" />

        </LinearLayout>


        <Button
            android:id="@+id/bmiCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF6F6F"
            android:text="BMI Calculator"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/homeback"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="350dp"
        android:backgroundTint="@color/inputbg"
        android:text="HOME"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>